.page{
    width:100vw;
    height:100vh;
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.start{
    flex-direction: column;
}
.start .warning{
    padding: 120rpx 0;
}
.start button{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
}
.gaming{
    width: 100%;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    padding:0 40rpx;
    box-sizing: border-box;
}
.gaming .title{
    font-size: 45rpx;
    padding: 50rpx 0 100rpx 0;
}
.gaming .options{
    width: 100%;
}
.gaming .option{
    padding: 15rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    border:1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
}
.gaming .right{
    background-color: skyblue;
}
.gaming .wrong{
    background-color: tomato;
}
.gaming .status{
    width: 100%;
    text-align: center;
}
.gaming .changeQuiz{
    width: 100%;
    padding: 30rpx 0;
}
.gaming .changeQuiz .previousQuiz{
    width: 35%;
    float:left;
}
.gaming .changeQuiz .nextQuiz{
    width: 35%;
    float:right;
}

.gaming .endgame{
    width: 100%;
    flex-direction: column;
}
.end{
    flex-direction: column;
    display: flex;
}
.end .rangeItem{
    height: 60rpx;
    display: flex;
    align-items: center;
    padding: 0 0 20rpx 0;
}
.end .rangeList{
    width: 100%;
    padding: 0 0 20rpx 0;
}
.end .rangeList .text{
    text-align: center;
    font-size: 45rpx;
    padding: 0 0 20rpx 0;
}
.end .rangeList .rangeItem{

    justify-content: center;
}
.end .rangeItem .header{
    padding: 0 12rpx;
}
.end .rangeItem image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
}
.end .rangeItem .nickName{
    padding: 0 12rpx 0 0;
}
.end .score{
    padding: 0 0 12rpx 0;
}